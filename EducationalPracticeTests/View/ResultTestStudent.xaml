<UserControl x:Class="EducationalPracticeTests.View.ResultTestStudent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EducationalPracticeTests.View"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="615" Background="Transparent">
    <Grid>
        <Border CornerRadius="0 20 20 0" Background="#dbdbf3">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Результаты студента"
                           Foreground="#3e3eb7"     
                           TextWrapping="Wrap"
                           FontFamily="Roboto"                            
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Center" 
                           FontSize="22"/>
                <DataGrid Grid.Row="1" BorderThickness="10 10" AutoGenerateColumns="True" x:Name="result"/>
            </Grid>
           
        </Border>
    </Grid>
</UserControl>
